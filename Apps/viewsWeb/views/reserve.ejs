		 amzn_assoc_linkid = 'ZPPYB4MYMQHGWKC3';
		 amzn_assoc_campaigns = 'music';
		 amzn_assoc_p = '14';
		 amzn_assoc_banner_type = 'category';
		 amzn_assoc_isresponsive = 'false';
